<Window x:Class="Library.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <WrapPanel>

            <StackPanel>
                <TextBlock Text="Username" Width="200" Height="40"></TextBlock>
                <TextBlock  Text="Username" Width="200" Height="40"></TextBlock>

            </StackPanel>
            <StackPanel>
                <TextBox Width="200" Height="40" Text="{Binding CurrentUser.Username}"></TextBox>
                <TextBox Width="200" Height="40" Text="{Binding CurrentUser.Password}"></TextBox>
                <Button Content="Login" Height="70" Command="{Binding login}"  >
                    <Button.InputBindings>
                        <KeyBinding  Command="{Binding login}" Key="Enter" />
                    </Button.InputBindings>
                    
                </Button>

            </StackPanel>

        </WrapPanel>
    </Grid>
</Window>
