<Window x:Class="Library.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        xmlns:Usercontrol="clr-namespace:Library.UserControls"
        
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Grid.Row="2" Command="{Binding BookCMD}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                            <Button Command="{Binding BookCMD}" Grid.Column="1" Content="Book"></Button>
                            <Border>
                                <Image Margin="10,10,10,10" Source="/Image/Book.png"></Image>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Grid.Row="3" >
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Button Command= "{Binding WorkerCMD}" Grid.Column="1" Content="Worker"></Button>
                            <Border>
                                <Image Margin="10,10,10,10" Source="/Image/Worker.png"></Image>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="4" Command="{Binding Filial}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Button Command="{Binding FilialCMD}" Grid.Column="1" Content="Filial"></Button>
                            <Border>
                                <Image Margin="10,10,10,10" Source="/Image/Filial.png"></Image>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="5">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1" Content="Filial"></Button>
                            <Border>
                                <Image Margin="10,10,10,10" Source="/Image/Logout.jpg"></Image>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Label Grid.Row="1">
                <Label.Template>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="1" Content="Name Surname" VerticalAlignment="Center"></Label>
                           <Ellipse Grid.Row="1" >
                <Ellipse.Fill>
                    <ImageBrush>
                        <ImageBrush.ImageSource>
                            <BitmapImage UriSource="/Image/User.png" />
                        </ImageBrush.ImageSource>
                    </ImageBrush>
                </Ellipse.Fill>
            </Ellipse>
                        </Grid>
                    </ControlTemplate>
                </Label.Template>
            </Label>
                
            
            <Label Content="Library" FontSize="30" HorizontalContentAlignment="Center" FontFamily="Calibri" FontWeight="Black"></Label>
        </Grid>
        <Border Name="MainBorder" Grid.Column="1">

            
        </Border>
                <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
