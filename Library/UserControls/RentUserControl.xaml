<UserControl x:Class="Library.UserControls.RentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Red" HorizontalAlignment="Left">
    <UserControl.Style >
        <Style TargetType="UserControl">
            <Style.Triggers>
                <EventTrigger  RoutedEvent="Window.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Width" Duration="0:0:12" >

                                    <LinearDoubleKeyFrame Value="100" KeyTime="0:0:0"/>
                                    <LinearDoubleKeyFrame Value="300" KeyTime="0:0:1"/>
                                    <LinearDoubleKeyFrame Value="500" KeyTime="0:0:2"/>
                                    <LinearDoubleKeyFrame Value="600" KeyTime="0:0:3"/>
                                    <LinearDoubleKeyFrame Value="670" KeyTime="0:0:4"/>

                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <Grid>

        <DockPanel  Background="Gray" Grid.Row="0"  VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch"
                    Grid.ColumnSpan="2" >
        </DockPanel>
        <DockPanel   Background="LightGray" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                     Grid.ColumnSpan="2" >
            <StackPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left"  Text="Name" Width="100" Height="30"    >
                    </TextBlock>
                    <TextBox Height="30" Width="100 " Text="{Binding CurrentRentBook.BookId.Name,Mode=TwoWay}"  Name="Name" >
                    </TextBox>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left"  Text="Deadline" Width="100" Height="30"    ></TextBlock>
                    <TextBox Height="30" Width="100" Text="{Binding CurrentRentBook.Deadline,Mode=TwoWay}"  Name="Note"></TextBox>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left" Text="Price"   Width="100" Height="30"></TextBlock>
                    <TextBox Height="30" Width="100"  Name="Price" Text="{Binding CurrentRentBook.Price,Mode=TwoWay}"></TextBox>
                </WrapPanel>
            </StackPanel>
            <StackPanel>

            </StackPanel>
            <StackPanel>
                <WrapPanel>
                </WrapPanel>

            </StackPanel>
            <StackPanel>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="Customer" Width="100" ></TextBlock>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="RealTime" Width="100" ></TextBlock>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="Date" Width="100" ></TextBlock>

            </StackPanel>
            <StackPanel>
                <ComboBox Name="Customers" Height="30" Width="100" ItemsSource="{Binding customerList}" DisplayMemberPath="Name"
                              SelectedItem="{Binding CurrentRentBook.Customer }" SelectedValuePath="Id"
                              SelectedValue="{Binding CurrentRentBook.Customer.Id ,Mode=TwoWay}"></ComboBox>
                <TextBox Height="30" Name="BuyPrice" VerticalAlignment="Top" Width="100 " Text="{Binding CurrentRentBook.BookId.BuyPrice,Mode=TwoWay}">
                </TextBox>
                <TextBox IsEnabled="False" Height="30" Name="Date" VerticalAlignment="Top" Width="100 " Text="{Binding CurrentRentBook.Date}">
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Button Name="Rent" Height="30" Width="95" HorizontalAlignment="Right" Command="{Binding rentBook}" VerticalAlignment="Top" Content="Rent" >
                </Button>
            </StackPanel>
        </DockPanel>
        <TextBlock  Height="30" Text="RentBook" FontWeight="Bold" FontFamily="30"  Width="100" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="246,0,246,1">
        </TextBlock>
    </Grid>
</UserControl>
