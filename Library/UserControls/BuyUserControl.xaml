<UserControl x:Class="Library.UserControls.BuyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <DockPanel  Background="Gray" Grid.Row="0"  VerticalAlignment="Stretch"
HorizontalAlignment="Stretch"
                    Grid.ColumnSpan="2" >
        </DockPanel>
        <DockPanel   Background="LightGray" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                     Grid.ColumnSpan="2" >
            <StackPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left"  Text="Name" Width="100" Height="30"    >
                    </TextBlock>
                    <TextBox Height="30" Width="100 " Text="{Binding CurrentBuyBook.BookId.Name,Mode=TwoWay}"  Name="Name" >
                    </TextBox>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left"  Text="Note" Width="100" Height="30"    ></TextBlock>
                    <TextBox Height="30" Width="100" Text="{Binding CurrentBuyBook.Note,Mode=TwoWay}"  Name="Note"></TextBox>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left" Text="Price"   Width="100" Height="30"></TextBlock>
                    <TextBox Height="30" Width="100"  Name="Price" Text="{Binding CurrentBuyBook.Price,Mode=TwoWay}"></TextBox>
                </WrapPanel>
            </StackPanel>
            <StackPanel>

            </StackPanel>
            <StackPanel>
                <WrapPanel>
                </WrapPanel>

            </StackPanel>
            <StackPanel>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="Customer" Width="100" ></TextBlock>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="BuyPrice" Width="100" ></TextBlock>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="Date" Width="100" ></TextBlock>

            </StackPanel>
            <StackPanel>
                <ComboBox Name="Customers" Height="30" Width="100" ItemsSource="{Binding customerList}" DisplayMemberPath="Name"
                              SelectedItem="{Binding CurrentBuyBook.Customer }" SelectedValuePath="Id"
                              SelectedValue="{Binding CurrentBuyBook.Customer.Id ,Mode=TwoWay}"></ComboBox>
                <TextBox Height="30" Name="BuyPrice" VerticalAlignment="Top" Width="100 " Text="{Binding CurrentBuyBook.BookId.BuyPrice,Mode=TwoWay}">
                </TextBox>
                <TextBox Height="30" Name="Date" VerticalAlignment="Top" Width="100 " Text="{Binding CurrentBuyBook.BookId.BuyPrice,Mode=TwoWay}">
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Button Name="Buy" Height="30" Width="95" HorizontalAlignment="Right" Command="{Binding buyBookCommand}" VerticalAlignment="Top" Content="Buy" >
                </Button>
            </StackPanel>
        </DockPanel>
        <TextBlock  Height="30" Text="BookBuy" FontWeight="Bold" FontFamily="30"  Width="100" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="246,0,246,1">
        </TextBlock>
        <ListView Visibility="Visible" Name="List"   SelectedItem="{Binding SelectBuyBook }" ItemsSource="{Binding BuyBooks}" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="No" Width="30" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Id}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding BookId.Name}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Customer" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Customer.Name}"   TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>

                    </GridViewColumn>
                    <GridViewColumn Header="Price" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Price}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Note" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Note}"  TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="BuyPrice" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding BookId.BuyPrice}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Date" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding BookId.Date}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
