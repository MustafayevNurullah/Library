<UserControl x:Class="Library.ViewModel.BookUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="670" HorizontalAlignment="Left">
    <UserControl.Style >
        <Style TargetType="UserControl">
            <Style.Triggers>
                <EventTrigger  RoutedEvent="Window.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Width" Duration="0:0:12" >

                                    <LinearDoubleKeyFrame Value="100" KeyTime="0:0:0"/>
                                    <LinearDoubleKeyFrame Value="300" KeyTime="0:0:1"/>
                                    <LinearDoubleKeyFrame Value="500" KeyTime="0:0:2"/>
                                    <LinearDoubleKeyFrame Value="600" KeyTime="0:0:3"/>
                                    <LinearDoubleKeyFrame Value="670" KeyTime="0:0:4"/>

                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <DockPanel  Background="Gray" Grid.Row="0"  VerticalAlignment="Stretch"
HorizontalAlignment="Stretch"
                    Grid.ColumnSpan="2" >
        </DockPanel>
        <DockPanel Background="LightGray"  Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                     Grid.ColumnSpan="2" >
           
            <StackPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left"  Text="Name"  Width="100" Height="30"    >
                    </TextBlock>
                        <TextBox Height="30" Width="100 " Text="{Binding CurrentBook.Name,Mode=TwoWay}"  Name="Name" >
                    </TextBox>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left"  Text="Author" Width="100" Height="30"    ></TextBlock>
                    <TextBox Height="30" Width="100" Text="{Binding CurrentBook.Author,Mode=TwoWay}"  Name="Author"></TextBox>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock HorizontalAlignment="Left" Text="Count"   Width="100" Height="30"></TextBlock>
                    <TextBox Height="30" Width="100"  Name="Count" Text="{Binding CurrentBook.Count,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
                </WrapPanel>
            </StackPanel>
            <StackPanel>
            </StackPanel>
            <StackPanel>
                <WrapPanel>
                </WrapPanel>
            </StackPanel>
            <StackPanel>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="Filiali" Width="100" ></TextBlock>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="SalePrice" Width="100" ></TextBlock>
                <TextBlock Margin="100,0,0,0" Height="30" VerticalAlignment="Top" Text="BuyPrice" Width="100" ></TextBlock>
            </StackPanel>
            <StackPanel>
                <ComboBox Name="Filial" Height="30" Width="100" ItemsSource="{Binding filials}" DisplayMemberPath="Name"
                              SelectedItem="{Binding CurrentBook.Filial,Mode=TwoWay }"
                              ></ComboBox>
                <TextBox Height="30" Name="SalePrice" VerticalAlignment="Top" Width="100 " Text="{Binding CurrentBook.SalePrice,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                </TextBox>
                <TextBox Height="30" Name="ByPrice" VerticalAlignment="Top" Width="100 " Text="{Binding CurrentBook.BuyPrice,Mode=TwoWay}">
                </TextBox>
            </StackPanel>
            <StackPanel>
                <Button Height="30" Width="95" Background="Transparent"   HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding addBook}" Content="Add" Name="Add"  >
                </Button>
                <Button Name="Update" Height="30" Width="95" HorizontalAlignment="Right" Command="{Binding UpdateBook}" VerticalAlignment="Top" Content="Update" >
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                    
                            </Style.Triggers>
                            
                            
                        </Style>
                    </Button.Style>
                </Button>
                <Button Height="30" Width="95" HorizontalAlignment="Right" Command="{Binding DeleteBook}" VerticalAlignment="Top" Content="Delete"  >
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding state, Mode=TwoWay}" Value="2">
                                    <Setter Property="IsEnabled" Value="True"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="IsEnabled" Value="True"></Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

        </DockPanel>
        <TextBlock  Height="30" Text="Books" FontWeight="Bold" FontFamily="30"  Width="100" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="246,0,246,1">
        </TextBlock>

        <ListView  Visibility="Visible" Name="List"   SelectedItem="{Binding SelectBook }" ItemsSource="{Binding Books}" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Buy" Command="{Binding BuyBookCMD}" >
                    </MenuItem>
                    <MenuItem Header="Rent" Command="{Binding RentCMD}" />

                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="No" Width="30" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Padding="5,0" Text="{Binding Id}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Author" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Author}"   TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>

                    </GridViewColumn>
                    <GridViewColumn Header="Count" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Count}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Filial" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Filial.Name}"  TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>

                    </GridViewColumn>
                    <GridViewColumn Header="SalePrice" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding SalePrice}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="ByPrice" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding BuyPrice}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
