<UserControl x:Class="Library.UserControls.UserUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="700">
    <Grid>
        <WrapPanel Background="Gray">
            <TextBlock Width="100" Text="Username"></TextBlock>
            <TextBox Margin="10,0,0,0" Text="{Binding CurrentUser.Username,Mode=TwoWay}" Width="100" Height="30" Name="Username"></TextBox>
            <TextBlock Width="100" Text="Password"></TextBlock>
            <TextBox Margin="10,0,0,0" Text="{Binding CurrentUser.Password,Mode=TwoWay}" Width="100" Height="30" Name="Password"></TextBox>
            <Button Margin="10,0,0,0" Width="100" Content="Add" Command="{Binding addUser}"></Button>
            <Button Margin="30,0,0,0" Width="100" Content="Update" Command="{Binding updateUser}"></Button>
            <CheckBox Content="CanCreateBook" IsChecked="{Binding CurrentUser.CanCreateBook}" ></CheckBox>
            <CheckBox Content="CanCreateUser" IsChecked="{Binding CurrentUser.CanCreateUser}"></CheckBox>
            <CheckBox Content="CanCreateBranch" IsChecked="{Binding CurrentUser.CanCreateBranch}"></CheckBox>
            <CheckBox Content="CanCreateCustomer" IsChecked="{Binding CurrentUser.CanCreateCustomer}"></CheckBox>
            <CheckBox Content="CanRent" IsChecked="{Binding CurrentUser.CanRent}"></CheckBox>
        </WrapPanel>
        <ListView Name="List"   SelectedItem="{Binding SelectUser }" ItemsSource="{Binding Users}" Grid.Row="2" Margin="0,50,0,0" Grid.ColumnSpan="2">
            <ListView.ContextMenu>
                <ContextMenu >
                    <MenuItem Header="Add"  />
                    <MenuItem Header="Delete" Command="{Binding deleteUser }"/>
                    <MenuItem Header="Update"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="No" Width="30" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Id}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Username" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Username}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Password" Width="90" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding Password}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="CanCreateBook" Width="90" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding CanCreateBook}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="CanCreateUser" Width="90" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding CanCreateUser}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="CanCreateBranch" Width="90" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding CanCreateBranch}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="CanCreateCustomer" Width="90" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding CanCreateCustomer}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="CanRent" Width="90" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="5,0" Text="{Binding CanRent}" TextAlignment="Center" VerticalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
